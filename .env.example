# FRIDAY Environment Variables - FREE TIER
# Copy to .env and fill in your values
# For Render Free + Cloudflare Pages deployment

# ============================================
# App Configuration
# ============================================
NODE_ENV=production
PORT=10000
APP_NAME=FRIDAY
APP_VERSION=1.0.0

# ============================================
# FREE TIER NOTES
# ============================================
# Render Free tier spins down after 15min of inactivity
# First request after spin-down has ~30-60s cold start
# Use UptimeRobot (free) to ping /api/health every 14min to keep warm
# Static site (friday.sh) on Cloudflare Pages - always fast

# ============================================
# Security (Generate strong random values)
# ============================================
# Generate with: openssl rand -base64 32
ADMIN_TOKEN=change-this-to-a-secure-random-token
API_KEY=change-this-to-a-secure-api-key

# ============================================
# Database (SQLite for Render Free tier)
# ============================================
# SQLite file persists across restarts on Render Disk
DATABASE_URL=sqlite:/opt/render/project/src/data/leaderboard.db
# For local development: DATABASE_URL=sqlite:./data/leaderboard.db

# Data directory (Render Disk mount point)
DATA_DIR=/opt/render/project/src/data

# Database pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================
# Rate Limiting
# ============================================
# Time window in milliseconds (15 minutes)
RATE_LIMIT_WINDOW_MS=900000
# Max requests per window
RATE_LIMIT_MAX_REQUESTS=100
# Leaderboard submissions per hour per instance
LEADERBOARD_RATE_LIMIT=10

# ============================================
# CORS
# ============================================
# Comma-separated list of allowed origins
CORS_ORIGINS=https://friday.openclaw.dev,https://*.openclaw.dev

# ============================================
# Logging
# ============================================
LOG_LEVEL=info
# Options: debug, info, warn, error

# Request logging
ENABLE_REQUEST_LOGGING=true

# ============================================
# Monitoring
# ============================================
# Health check token (optional extra security)
HEALTH_CHECK_TOKEN=

# External monitoring service
# UptimeRobot, Pingdom, etc.
MONITORING_WEBHOOK_URL=

# ============================================
# Backups (Self-hosted only)
# ============================================
# AWS S3 Configuration
S3_BUCKET_NAME=friday-backups
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# Backup retention in days
BACKUP_RETENTION_DAYS=30

# Local backup directory (self-hosted)
BACKUP_DIR=/backups/friday

# ============================================
# Analytics (Optional)
# ============================================
# Plausible, Fathom, or similar
ANALYTICS_ENDPOINT=
ANALYTICS_SITE_ID=

# ============================================
# Notifications (Optional)
# ============================================
# Discord webhook for alerts
DISCORD_WEBHOOK_URL=

# Slack webhook for alerts
SLACK_WEBHOOK_URL=

# Email SMTP (for critical alerts)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@openclaw.dev
ALERT_EMAIL=admin@openclaw.dev

# ============================================
# Feature Flags
# ============================================
# Enable/disable leaderboard
ENABLE_LEADERBOARD=true

# Enable/disable script analytics
ENABLE_ANALYTICS=true

# Enable public stats endpoint
ENABLE_PUBLIC_STATS=true

# ============================================
# Development (DO NOT USE IN PRODUCTION)
# ============================================
# DEBUG=true
# SKIP_AUTH=true
# MOCK_DATABASE=true
